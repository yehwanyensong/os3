{# Example custom template for interactive artwork #}
<div class="custom-interactive-artwork">
  <style>
    .custom-interactive-artwork {
      padding: 2rem;
      background: #f5f5f5;
      border-radius: 8px;
    }
    .interactive-canvas {
      width: 100%;
      height: 500px;
      background: white;
      border: 2px solid #333;
      cursor: crosshair;
    }
    .controls {
      margin-top: 1rem;
      display: flex;
      gap: 1rem;
    }
    .controls button {
      padding: 0.5rem 1rem;
      background: #333;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
    .controls button:hover {
      background: #555;
    }
  </style>

  <h2>{{ title }}</h2>
  <p><strong>{{ artist }}</strong> | {{ year }}</p>

  <canvas id="interactive-canvas" class="interactive-canvas"></canvas>

  <div class="controls">
    <button id="clear-btn">Clear</button>
    <button id="color-btn">Change Color</button>
  </div>

  <script>
    (function() {
      const canvas = document.getElementById('interactive-canvas');
      const ctx = canvas.getContext('2d');

      // Set canvas size
      canvas.width = canvas.offsetWidth;
      canvas.height = canvas.offsetHeight;

      let isDrawing = false;
      let currentColor = '#000000';
      const colors = ['#000000', '#FF0000', '#00FF00', '#0000FF', '#FFFF00', '#FF00FF'];
      let colorIndex = 0;

      // Drawing functionality
      canvas.addEventListener('mousedown', (e) => {
        isDrawing = true;
        const rect = canvas.getBoundingClientRect();
        ctx.beginPath();
        ctx.moveTo(e.clientX - rect.left, e.clientY - rect.top);
      });

      canvas.addEventListener('mousemove', (e) => {
        if (!isDrawing) return;
        const rect = canvas.getBoundingClientRect();
        ctx.lineTo(e.clientX - rect.left, e.clientY - rect.top);
        ctx.strokeStyle = currentColor;
        ctx.lineWidth = 2;
        ctx.stroke();
      });

      canvas.addEventListener('mouseup', () => {
        isDrawing = false;
      });

      canvas.addEventListener('mouseleave', () => {
        isDrawing = false;
      });

      // Clear button
      document.getElementById('clear-btn').addEventListener('click', () => {
        ctx.clearRect(0, 0, canvas.width, canvas.height);
      });

      // Color button
      document.getElementById('color-btn').addEventListener('click', () => {
        colorIndex = (colorIndex + 1) % colors.length;
        currentColor = colors[colorIndex];
        document.getElementById('color-btn').textContent = `Color: ${currentColor}`;
      });
    })();
  </script>
</div>
