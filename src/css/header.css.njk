.sm_popup{
    z-index: 1000000;
    position: absolute;
    background: black;
    width: 100%;
    left: auto;
    top: 0;
    overflow-y: scroll;
    /* box-shadow: 0vh 0vh 2vh black; */
    right: 0;
    float: left;
    display: flex;
    justify-content: space-around;
    border-bottom: 1px solid black;
}
.col{
    float: left;
    display: flex;
    justify-content: space-around;
}
.col {
  display: flex;
  float: left;
  gap: 50px; /* space between divs */
}


.col1 *{
color: white;
}
.col1 {
    width: 200%;
}
.col2{
    width: 100%;
	background-color: white;
}
.sm_popup div{float: left;}
.sm_popup_button_1:hover{
	text-decoration: underline;
	cursor: pointer;
}
.sm_popup_button_3{
    font-size: 2.6vh;
    line-height: 0.8;
    position: absolute;
    right: 5vh;
}
.popup_button{
    /* float: left; */
    border: 1px solid #00000038;
    display: block;
    width: 100%;
    text-align: center;
    background: wheat;
}
.popup_button:hover{
    filter: invert(1);
}
.popup_button_wrap{
    justify-content: space-around;
    flex-wrap: nowrap;
    width: 100%;
}

/* When the screen (or container) becomes too narrow */
@media (max-width: 600px) {
  .col {
    display: block;
  }
  .sm_popup div{
    float: none;
  }
}
