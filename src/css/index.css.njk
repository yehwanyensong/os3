}

.ovalDiv {
    background-color: white;
    pointer-events: none;
mix-blend-mode: exclusion;
  boz-shadow:0vh 0vh 7.5vh white;
    transition: 1s box-shadow;
    box-shadow: 0vh 0vh 15vh 15vh white, 0vh 0vh 0vh 100vw #3d3d3d00;
