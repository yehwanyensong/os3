body,html{
    background-color: white;
    position: absolute;
    width: 100%;
    height: 100%;
    overflow: hidden;
}
body{
    /*background-image: url(egbg.png);*/
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
}
*{
    margin: 0;
    box-sizing: border-box;
  font-family: "Roboto", sans-serif;
  font-optical-sizing: auto;
  font-style: normal;
  font-variation-settings:
    "wdth" 100;
    font-size: 1.5vh;
}
.close{
    position: absolute;
    right: 0;
    top: 0;
    left: auto;
    width: 1.5vh;
    top: 0.2vh;
    right: 0.5vh;
    cursor: pointer;
    /*filter: invert(1);*/
}
.popup_about .close{
    filter: invert(0);
}
.home_button{
	position: absolute;
	right: 0;
	top: 0;
}
.popup_title{
    font-size: 5vh;
    text-align: center;
    line-height: 1.2;
    width: 100%;}
.popup_artist{
    text-align: center;
}
.popup_about, .popup_essay{
    display: none;
    font-family: "elza-text", sans-serif;
    font-weight: 400;
    font-style: normal;
    font-size: 2.5vh;
    letter-spacing: -0.025vh;
}
.popup_essay{
    display: none;
}
.popup_artist,
.popup_year,
.popup_medium{
    line-height: 1;
    text-align: center;
}
.popup{
    z-index: 1000000;
    position: absolute;
    background: white;
    width: 100vh;
    left: calc(50vw - 50vh);
    top: 2.5vh;
    padding: 1vh;
    height: 95vh;
    overflow-y: scroll;
    /* box-shadow: 0vh 0vh 2vh black; */
    border: 1px solid black;
}
.popup_des{
    font-weight: 400;
    font-style: normal;
    font-size: 2.5vh;
    letter-spacing: -0.025vh;
    font-weight: 400;
    font-style: normal;
    font-size: 2.5vh;
    letter-spacing: -0.025vh;
    line-height: 1.25;
}
.popup_innerspi{
    max-width: 30vh;
    border: 1px solid black;
    text-align: center;
    left: 50%;
    position: relative;
    transform: translateX(-50%);
    margin-top: 1vh;
}
a{text-decoration: none;
    cursor: pointer;}

.media-container {
    width: 100%;
    max-width: 100%;
    margin: 2vh auto;
}
#artwork-container {
    background: black;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;

    video {
        width: 100%;
        height: 100%;
        object-fit: contain;
        object-position: center;
    }
}

.media-video video,
.media-audio audio {
    width: 100%;
    max-width: 100%;
}

.media-iframe iframe {
    width: 100%;
    min-height: 60vh;
}

.media-image img {
    width: 100%;
    max-width: 100%;
    height: auto;
    display: block;
}